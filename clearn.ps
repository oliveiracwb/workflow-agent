# clean.ps - Limpa builds e dependências do projeto React/Electron

Write-Host "Limpando dist, dist-electron, dist-ssr, node_modules e arquivos de lock..."

if (Test-Path dist) { Remove-Item -Recurse -Force dist }
if (Test-Path dist-electron) { Remove-Item -Recurse -Force dist-electron }
if (Test-Path dist-ssr) { Remove-Item -Recurse -Force dist-ssr }
if (Test-Path node_modules) { Remove-Item -Recurse -Force node_modules }

if (Test-Path package-lock.json) { Remove-Item -Force package-lock.json }
if (Test-Path yarn.lock) { Remove-Item -Force yarn.lock }

Write-Host "Limpeza concluída!"